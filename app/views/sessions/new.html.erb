<div>
  <%= form_tag '/login', :method => "post" do %>
    <h2>Login</h2>
    <%= label_tag(:user_email, "Email:") %>
    <%= email_field(:user, :email) %>
    <%= label_tag(:user_password, "Password:") %>
    <%= password_field(:user, :password) %>
    <%= submit_tag "Submit" %>
  <% end %>
</div>
